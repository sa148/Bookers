<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="error_explanation">
  <h2>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_with model: @book do |f| %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<div class="edit-up">
  <%= f.submit 'Update Book' %>
</div>
<br>
<div class="edit-sb">
  <%= link_to "Show", book_path(@book.id)%>
|
  <%= link_to "Back", books_path(@book.id)%>
</div>
<% end %>